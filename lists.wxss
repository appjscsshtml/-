.head>image{
  width:100rpx;
height:100rpx;
border-radius: 50%;
margin-top: 30rpx;
}
swiper swiper-item:nth-of-type(2) view{
    color: #6d6d6d;
}
swiper swiper-item:nth-of-type(4) view{
    color: #000;
}



.wrap{
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top: 467rpx;
  left: 50%;
  margin-left: -53rpx;
}
.wrap>image{
  width: 100%;
  height: 100%;
}
swiper swiper-item:nth-of-type(1) .wrap {
   top: 467rpx !important;
}

swiper swiper-item:nth-of-type(2) .wrap{
   top: 467rpx !important;
}
swiper swiper-item:nth-of-type(4) .wrap{
   top: 467rpx !important;
}










